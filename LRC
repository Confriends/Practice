<body>
  <div class="label">Tap anywhere to roll the dice</div>
  <div class="dice-container">
    <div class="dice" id="dice1">?</div>
    <div class="dice" id="dice2">?</div>
    <div class="dice" id="dice3">?</div>
  </div>
  <script>
    const faces = ["L", "R", "C", "•", "•", "•"];
    const diceEls = [
      document.getElementById("dice1"),
      document.getElementById("dice2"),
      document.getElementById("dice3")
    ];

    function rollAllDice() {
      diceEls.forEach(die => {
        const face = faces[Math.floor(Math.random() * faces.length)];
        die.textContent = face;
      });
    }

    // Roll when tapping anywhere on the body
    document.body.addEventListener("click", rollAllDice);
    document.body.addEventListener("touchstart", rollAllDice);

    // Optional: initial roll when page loads
    rollAllDice();
  </script>
</body>
</html>
